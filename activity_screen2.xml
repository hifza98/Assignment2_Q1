<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen2">

    <ImageView
        android:id="@+id/softimg"
        android:layout_width="413dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_se"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>
    <TextView
        android:id="@+id/details"
        android:layout_width="400dp"
        android:layout_height="500dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/softimg"
        android:text="The oculus Medium team is looking for an experienced Software Engineer to join the team to help the engine technology for a variety of projects. The position if full-time and based in San Francisco, CA \n\nRESPONSIBILITIES:"
        android:textSize="20sp"
        android:textColor="#000000"
        ></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>