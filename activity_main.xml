<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:text="Software Engineer"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/jobTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JOBS"
        android:textSize="32sp"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></TextView>

    <ImageView
        android:id="@+id/jobimg"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:contentDescription="jobimg"
        android:src="@drawable/ic_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jobTab"></ImageView>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="56dp"
        android:text="Senior Software Engineer \n -Data \n HouseCanary \n San Fransisco CA \t \t \t \t \t\t \t \t \t \t \t 5d \n $147k-$165k (Glassdoor Est.)"
        android:textColor="#000000"
        app:layout_constraintLeft_toRightOf="@id/jobimg"
        app:layout_constraintTop_toTopOf="@id/jobimg"></TextView>

    <Button
        android:id="@+id/applybtn"
        android:layout_width="122dp"
        android:layout_height="69dp"
        android:layout_marginTop="20dp"
        android:text="APPLY"
        app:layout_constraintTop_toBottomOf="@id/desc"
        app:layout_constraintLeft_toRightOf="@id/jobimg"
        tools:layout_editor_absoluteX="220dp"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>